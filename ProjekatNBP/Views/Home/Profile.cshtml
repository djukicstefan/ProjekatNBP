@model User

@{
    ViewData["Title"] = "Korisnički profil";
}

<div class="col-7">

    <div class="container">
        <div class="row main-row">           
            <div class="col-4 d-flex justify-content-center">
                <div class="card card-shadow" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-subtitle mb-2 text-muted">@Model.Username</h5>
                        <h5 class="card-subtitle mb-2 text-muted">@Model.Email</h5>
                        <h5 class="card-subtitle mb-2 text-muted">@Model.City</h5>
                        <h5 class="card-subtitle mb-2 text-muted">@Model.Phone</h5>
                        <h5 class="card-subtitle mb-2 text-muted">@Model.Password</h5>
                    </div>
                </div>
            </div>              
        </div>
    </div>

</div>
