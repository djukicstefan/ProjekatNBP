@model List<Room>

@{
	ViewData["Title"] = "Chat";
}

<div class="container-fluid">
	<div class="row">
		<div class="col-2  category-col">
			<div class="card card-shadow">
				<div class="card-body">
					<h5 class="card-title">Chats:</h5>
					<ul class="list-group">
						@if (Model.Count > 0)
						{
							foreach (var item in Model)
							{
								<li class="list-group-item d-flex justify-content-between align-items-center">
									<a asp-controller="Chat" asp-action="Index" asp-route-r="@item">@item</a>
								</li>
							}
						}
					</ul>
				</div>
			</div>
		</div>

		<div class="col-7">
			<div class="container card card-shadow">
				<div class="row main-row" id="chatMessages"></div>
			</div>
		</div>
	</div>
</div>